<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="net.logstash.logback.encoder.LogstashEncoder">
			<throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
				<maxDepthPerThrowable>30</maxDepthPerThrowable>
				<exclude>java\.util\.concurrent\..*</exclude>
				<exclude>org\.apache\.tomcat\..*</exclude>
				<exclude>org\.apache\.coyote\..*</exclude>
				<exclude>org\.apache\.catalina\..*</exclude>
				<exclude>org\.springframework\.web\..*</exclude>
			</throwableConverter>
		</encoder>
	</appender>
	<springProfile name="test">
		<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{70} [ytelse=%X{ytelse}, sid=%X{soknad_id}, cid=%X{correlation_id}] - %msg%n</pattern>
			</encoder>
		</appender>
	</springProfile>

	<root level="info">
		<appender-ref ref="stdout" />
	</root>

	<springProfile name="default">
		<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
			<Name>CONFIDENTIAL_FILTER</Name>
			<Marker>CONFIDENTIAL</Marker>
			<OnMatch>DENY</OnMatch>
		</turboFilter>
	</springProfile>

	<springProfile name="dev-gcp,prod-gcp">
		<logger name="no.nav.k9brukerdialogprosessering" level="trace" />
	</springProfile>
</configuration>
